<!DOCTYPE html>
<html>

<head>
  <% include ../../partials/header.ejs %>
</head>

<body>
  <div class="wrapper ">
    <% include ../../partials/sidebar.ejs %>

    <div class="main-panel ps-container ps-theme-default ps-active-y">
      <!-- Navbar -->
      <% include ../../partials/navbar.ejs %>
      <!-- End Navbar -->
      <div class="content">
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <div class="row">
              <% results.forEach(function(r) { %>
              <div class="col-md-3" data-id="<%= r._id %>" id="base-db">
                <div class="card">
                  <div class="card-header">
                    <h5 class="card-title"><%= r.dbName %></h5>
                  </div>
                  <div class="card-body ">
                    <div class="form-group">
                      <label for="dbType">Database Type</label>
                      <br>
                      <select class="selectpicker" data-size="2" id="dbType" data-style="btn btn-warning btn-round"
                        title="Single Select">
                        <option disabled>DB TYPE</option>
                        <option value="MSSQL" selected>MSSQL</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="dbConnectionString">Connection String</label>
                      <textarea class="form-control" id="dbConnectionString" rows="3" style="max-height: 250px;"
                        readonly><%= r.dbConnectionString %></textarea>
                    </div>
                  </div>
                </div>
              </div>
              <% }); %>
              <div class="col-md-9">
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">Db Process</h4>
                  </div>
                  <div class="card-body">
                    <button class="btn btn-warning" onclick="createDbFirstInit()">
                      <i class="nc-icon nc-zoom-split"></i> Create Init
                    </button>
                    <button class="btn btn-info">
                      <span class="btn-label">
                        <i class="nc-icon nc-settings-gear-65"></i>
                      </span>
                      Info
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <% results[0].Tables.forEach(function(table) { %>
          <div class="col-md-2">
            <div class="card">
              <div class="card-header">
                <h6 class="card-title mb-0 mt-0"><%= table.schema_name %>.<%= table.table_name %></h6>
              </div>
              <div class="card-body">
                <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                  <thead>
                    <tr>
                      <th colspan="2">
                        <h6 class="card-title mb-0 mt-0">Columns</h6>
                      </th>
                    </tr>
                  </thead>
                  <% table.columns.forEach(function(column) { %>
                  <tr>
                    <td><%= column.column_name %>
                      (<%= column.data_type %><%= column.column_lenght ? "("+column.column_lenght+")" : "" %>,
                      <%= column.column_isnull ? "NOT NULL" : "NULL" %>)</td>
                  </tr>
                  <% }); %>
                </table>
              </div>
              <!-- end content-->
            </div>
            <!--  end card  -->
          </div>
          <% }); %>
        </div>
      </div>
      <% include ../../partials/footer.ejs %>
    </div>
  </div>
  <% include ../../partials/sidebar-background.ejs %>
  <% include ../../partials/footer-js-core.ejs %>
  <script src="/assets/js/enums.js" defer></script>
  <script src="/assets/js/module.js" defer></script>
  <script src="/assets/js/db/database-process.js" defer></script>

</body>

</html>